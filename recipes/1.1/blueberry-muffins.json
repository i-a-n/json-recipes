{
  "schema_version": "1.1",
  "recipe_id": "unique-recipe-id-2",
  "title": "Blueberry Muffins",
  "description": "Classic recipe from the Ritz Carlton",
  "labels": ["dessert", "baking"],
  "creator": {
    "user_id": "2",
    "username": "alex",
    "email": "alex@union.io"
  },
  "ingredients": [
    {
      "items": [
        {
          "name": "sifted all-purpose flour",
          "quantity": "3½ cups"
        },
        {
          "name": "baking powder",
          "quantity": "2 tablespoons"
        },
        {
          "name": "sugar",
          "quantity": "¾ cup"
        },
        {
          "name": "salt",
          "quantity": "Pinch",
          "notes": "optional"
        },
        {
          "name": "eggs",
          "quantity": "5",
          "notes": "slightly beaten"
        },
        {
          "name": "milk",
          "quantity": "½ cup"
        },
        {
          "name": "unsalted butter",
          "quantity": "5 ounces",
          "notes": "melted and cooled"
        },
        {
          "name": "blueberries",
          "quantity": "4 or 5 cups",
          "notes": "fresh or frozen"
        },
        {
          "name": "sugar for topping",
          "quantity": "Additional"
        }
      ]
    }
  ],
  "instructions": [
    "Step 1: Heat oven to 425 degrees.",
    "Step 2: Mix all dry ingredients together. Stir in eggs, milk, and butter; do not overmix. Carefully stir in berries.",
    "Step 3: Grease the top of large muffin tins. Insert paper cups and spoon batter to the top of the paper cups. Sprinkle generously with sugar.",
    "Step 4: Reduce heat to 400 degrees, place muffin tins on middle shelf of oven. Bake about 25 minutes, until muffins are golden brown. Remove from muffin tins and cool."
  ],
  "yield": "12 muffins"
}
