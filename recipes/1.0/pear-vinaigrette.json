{
  "schema_version": "1.0",
  "recipe_id": "011",
  "title": "Pear Vinaigrette",
  "creator": {
    "user_id": "2",
    "username": "alex",
    "email": "alex@union.io"
  },
  "ingredients": [
    {
      "name": "ripe pear",
      "quantity": "1 (peeled, cored, and chopped)"
    },
    {
      "name": "white wine",
      "quantity": "½ cup"
    },
    {
      "name": "garlic",
      "quantity": "1 clove (chopped)"
    },
    {
      "name": "Dijon mustard",
      "quantity": "2 teaspoons"
    },
    {
      "name": "white balsamic vinegar",
      "quantity": "¼ cup"
    },
    {
      "name": "ground black pepper",
      "quantity": "1 teaspoon"
    },
    {
      "name": "sea salt",
      "quantity": "¼ teaspoon"
    },
    {
      "name": "olive oil",
      "quantity": "½ cup"
    }
  ],
  "instructions": [
    "Blend the pear, white wine, garlic, Dijon mustard, white balsamic vinegar, black pepper, and sea salt in a blender until well combined.",
    "Drizzle the olive oil into the mixture in a thin, steady stream while continuing to blend.",
    "Blend a few seconds longer until the salad dressing is thick and creamy."
  ],
  "yield": "1.5 cups"
}
